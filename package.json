{
  "name": "coin-toss-game",
  "version": "1.0.0",
  "description": "A decentralized coin toss game with smart contracts, backend, and frontend",
  "main": "index.js",
  "scripts": {
  "start": "concurrently \"npm run start-hardhat\" \"npm run deploy-and-services\"",
  "start-hardhat": "npx hardhat node",
  "deploy-and-services": "npm-run-all -s deploy start-services",
  "deploy": "npx hardhat run scripts/deploy.js --network localhost",
  "start-services": "concurrently \"npm run start-backend\" \"npm run start-leaderboard\" \"npm run start-frontend\"",
  "start-backend": "node api/index.js",
  "start-leaderboard": "node tools/leaderboard.js",
  "start-frontend": "npx serve -l 5000 web",
  "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "concurrently": "^8.2.2",
    "hardhat": "^2.26.3",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "ethers": "^6.15.0",
    "express": "^5.1.0",
    "serve": "^14.2.3",
    "sqlite3": "^5.1.7"
  }
}
